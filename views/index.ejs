          <!DOCTYPE html>
          <html>
          <head>
            <title>Calcola Età Canina</title>
            <style>
              body { font-family: Arial, sans-serif; max-width: 600px; margin: 20px auto; padding: 20px; }
              .form-group { margin-bottom: 15px; }
              label { display: block; margin-bottom: 5px; }
              input, select { width: 100%; padding: 8px; }
              .error { color: red; margin-bottom: 10px; }
            </style>
          </head>
          <body>
            <h1>Calcola l'età umana del tuo cane</h1>

            <% if (error) { %>
              <div class="error"><%= error %></div>
            <% } %>

            <form action="/calculate" method="POST">
              <div class="form-group">
                <label>Nome del cane:</label>
                <input type="text" name="dogName" required>
              </div>

              <div class="form-group">
                <label>Razza:</label>
                <select name="breed" required>
                  <% breeds.forEach(breed => { %>
                    <option value="<%= breed %>"><%= breed.replace(/_/g, ' ').toUpperCase() %></option>
                  <% }); %>
                </select>
              </div>

              <div class="form-group">
                <label>Peso (kg):</label>
                <input type="number" step="0.1" name="weight" required>
              </div>

              <div class="form-group">
                <label>Età attuale (anni):</label>
                <input type="number" step="0.5" name="age" required>
              </div>

              <button type="submit">Calcola</button>
            </form>
          </body>
          </html>